appName = "electronWannierTransport"
phFC2FileName = "qe-elph/silicon.fc"
sumRuleFC2 = "crystal"
electronH0Name = "qe-elph/si_tb.dat",
elphFileName = "qe-elph/silicon.phoebe.elph.hdf5"

kMesh = [10,10,10]
temperatures = [300.]
dopings = [1.e21]

smearingMethod = "gaussian"
smearingWidth = 0.5 eV
windowType = "population"

# for a production relaxons run, use this -- otherwise, false
symmetrizeMatrix = true
scatteringMatrixInMemory=true
solverBTE = ["iterative","variational","relaxons"]
